extends layout/default

//- Hero
mixin hero()
    section.hero.container
        h2.hero_title Welcome to Budapest!
        p.hero_description Budapest Things to do - detailed info about things to do: sightseeing, events, restaurants, nightlife, shopping, pubs, bars, casinos and more...
        a(href='#').button--booking Start booking!
        picture.hero_background
            source(media='(min-width: 1900px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_2100,fl_progressive/v1602023918/background_puwwrg.jpg')
            source(media='(min-width: 1600px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_1900,fl_progressive/v1602023918/background_puwwrg.jpg')
            source(media='(min-width: 1400px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_1600,fl_progressive/v1602023918/background_puwwrg.jpg')
            source(media='(min-width: 1200px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_1400,fl_progressive/v1602023918/background_puwwrg.jpg')
            source(media='(min-width: 1000px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_1200,fl_progressive/v1602023918/background_puwwrg.jpg')
            source(media='(min-width: 800px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_1000,fl_progressive/v1602023918/background_puwwrg.jpg')
            source(media='(min-width: 600px)' srcset='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_800,fl_progressive/v1602023918/background_puwwrg.jpg')
            img(src='https://res.cloudinary.com/domtflweo/image/upload/c_scale,w_800,fl_progressive/v1602023918/background_puwwrg.jpg' alt='Budapest')

//- Main
mixin main()
    main.main.container
        h2.sr-only Main content
        +imageHeroesSquare
        p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed urna arcu, tempus nec urna non, lacinia vehicula dolor. Integer pellentesque leo tristique nibh tristique posuere.  

//- Tags
mixin tags(object)
    title=object.title
    //- Primary Meta Tags
    meta(name='title' content=object.title)
    meta(name='description' content=object.description)
    //- Open Graph / Facebook
    meta(property='og:type' content='website')
    meta(property='og:url' content=object.url)
    meta(property='og:title' content=object.title)
    meta(property='og:description' content=object.description)
    meta(property='og:image' content=object.image)
    //- Twitter
    meta(property='twitter:card' content='summary_large_image')
    meta(property='twitter:url' content=object.url)
    meta(property='twitter:title' content=object.title)
    meta(property='twitter:description' content=object.description)
    meta(property='twitter:image' content=object.image)

block tags
    +tags({
        title: 'Gergő Tóth sitebuild',
        description: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt qui, quibusdam ipsa, explicabo harum fugit praesentium iusto corrupti architecto, autem aut! Enim eos deleniti commodi asperiores aliquam sapiente, fugiat minima.',
        image: 'https://images.unsplash.com/photo-1463852247062-1bbca38f7805?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1055&q=80',
        url: 'http://gergototh-sitebuild.herokuapp.com',
    })

block content
    +hero
    +main
